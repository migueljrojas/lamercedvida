extends ../_layouts/base

include ../_modules/donate-cta/donate-cta
include ../_modules/videos/videos

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.contacto
      section.contacto__hero
        .contacto__hero__image
          img(src='/images/contactanoshero.jpg')
        
        .contacto__hero__data
          h1.contacto__hero__data__title Contactanos

          p.contacto__hero__data__text  Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.

      +donate-cta
            
      section.contacto__body
        
        .contacto__body__col
          form.contacto__form
            h1 Datos de Contacto
          
            .contacto__form__group
              label.contacto__form__label Nombre de Contacto
              input.contacto__form__input(type='text')

            .contacto__form__group
              label.contacto__form__label E-Mail
              input.contacto__form__input(type='email')

            .contacto__form__group
              label.contacto__form__label Numero de Telefono
              input.contacto__form__input(type='phone')

            .contacto__form__group
              label.contacto__form__label Su Mensaje
              textarea.contacto__form__input.contacto__form__input--textarea

            .contacto__form__group
              button.contacto__form__submit Enviar
            
        .contacto__body__col
          .contacto__body__image
            img(src='/images/contactanos.jpg')
      
